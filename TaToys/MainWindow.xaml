<Window x:Class="TaToys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaToys"
        mc:Ignorable="d"
        Width="1280" Height="1280"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">
    <Border Background="Aqua" Padding="10">
        <Grid Background="Yellow">
            <DockPanel>
                <ToolBarTray DockPanel.Dock="Top">
                    <ToolBar>
                        <CheckBox Content="Red" Background="Red"/>
                        <CheckBox Content="Green" Background="Green"/>
                        <CheckBox Content="Blue" Background="Blue"/>
                        <CheckBox Content="Alpha" Background="Transparent"/>
                    </ToolBar>
                </ToolBarTray>
                <StackPanel/>
            </DockPanel>
        </Grid>
    </Border>
</Window>
